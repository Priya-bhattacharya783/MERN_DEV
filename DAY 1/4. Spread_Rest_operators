
// Using spread operator to combine arrays
const arr1 = [1,2];
const arr2 = [...arr1, 3, 4];
console.log(arr2); // [1, 2, 3, 4]

const arr3 = [3, 4, ...arr1];
console.log(arr3); // [3, 4, 1, 2]

// Using spread operator to combine objects
const obj1 = {a: 1, b: 2};
const obj2 = {...obj1, c: 3};
console.log(obj2); // {a: 1, b: 2, c: 3}

// Rest operator in function parameters
function sum(...priya) {
    console.log(priya); // Array of all arguments [1,2,3]
    return priya.reduce((acc, curr) => acc + curr, 0);// sum of all arguments with accumulator initialized to 0
}

console.log(sum(1, 2, 3)); // 6
console.log(sum(4, 5, 6, 7, 8)); // 30